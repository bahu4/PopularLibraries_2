<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".third.ThirdActivity">

    <Button
        android:id="@+id/addSubBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add_subscription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/delSubBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/delSubBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/delete_subscription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addSubBtn" />

    <TextView
        android:id="@+id/msgView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="@dimen/textSize"
        app:layout_constraintBottom_toTopOf="@+id/addSubBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>